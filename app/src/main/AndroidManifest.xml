<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="petarkitanovic.androidkurs.omiljeniglumci">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@mipmap/black_myimdb_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/black_myimdb_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DetaljiFilma"
            android:screenOrientation="portrait"/>
        <activity android:name=".ListaGlumaca"
            android:screenOrientation="portrait"/>
        <activity android:name=".GlumciDetails"
            android:screenOrientation="portrait"/>
        <activity android:name=".ListaFilmova"
            android:screenOrientation="portrait"/>
        <activity android:name=".Biografija"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FullVideo"
            android:screenOrientation="landscape" />
        <activity android:name=".PlotFilma"
            android:screenOrientation="portrait"/>
        <activity android:name=".OmiljeniFilmovi"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FullSlika"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>